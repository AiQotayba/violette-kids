{
  "name": "violette-kids-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "build": "tsc",
    "dev": "pnpm exec tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "pnpm exec eslint src --ext .ts",
    "db:create": "pnpm exec tsx scripts/create-db.ts",
    "db:generate": "pnpm exec prisma generate",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:push": "pnpm exec prisma db push",
    "db:seed": "pnpm exec tsx prisma/seed.ts",
    "db:studio": "pnpm exec prisma studio",
    "docs:generate": "pnpm exec tsx scripts/export-openapi.ts",
    "postman:generate": "node scripts/generate-postman.cjs",
    "postman:test": "newman run postman-collection.json -e postman-environment.json",
    "docs:build": "node scripts/build-docs.cjs"
  },
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.39.2",
    "newman": "^6.2.2",
    "openapi-to-postmanv2": "^6.0.0",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "node-forge": "^1.3.2",
      "hono": "^4.11.7",
      "qs": "^6.14.1",
      "jose": "^4.15.5",
      "lodash": "^4.17.23",
      "js-yaml": "^4.1.1"
    }
  }
}